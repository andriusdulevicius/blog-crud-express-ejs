<!-- ikeliam head -->
<%- include('../partials/head.ejs') %>

<!-- //ikeliam bendra navigacijos faila dinamiskai -->
<%- include('../partials/nav.ejs')%>

<main role="main">
  <h1 class="display-3">This is the owners page</h1>
  <!-- galima uzsideti success pop up po sukurimo -->
  <% if (locals.feedback && feedback.msg === 'created') { %>
  <div class="alert alert-success" role="alert">Owner <%=feedback.name%> created</div>
  <!-- locals.feedback isvengia klaidos , nes tik su feedback.msg mestu klaida undefined -->
  <% } %> <% if (locals.feedback && feedback.msg === 'deleted') { %>
  <div class="alert alert-danger" role="alert">Owner <strong><%=feedback.name%></strong> was Deleted.</div>
  <% } %> <% if (locals.feedback && feedback.msg === 'edited') { %>
  <div class="alert alert-warning" role="alert">Owner <strong><%=feedback.name%></strong> was Edited.</div>
  <% } %>
  <a href="/owners/new" class="btn btn-success btn-primary">Add new owner</a>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% result.forEach(({_id,name,email,createdAt}) => {%>
        <!-- one card -->
        <div id="one-post" class="col-md-4" data-post-id="<%=_id %>">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%- name%></h5>
              <h6 class="text-muted"><%- email%></h6>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/owners/single/<%=_id%>" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-muted"><%- createdAt.toLocaleString()%></small>
              </div>
              <form action="/owners/delete/<%= _id %>" method="POST">
                <button class="btn btn-danger" type="submit">Delete me</button>
              </form>
            </div>
          </div>
        </div>
        <!-- card end -->
        <%})%>
      </div>
    </div>
  </div>
</main>

<%-include('../partials/footer.ejs')%>
